{
  "name": "focus-flow-monitor",
  "version": "0.8.4",
  "description": "Master your online habits! Track time, visualize usage, block distractions, set limits, and enhance focus with the built-in Pomodoro (Tomato) timer.",
  "private": true,
  "scripts": {
    "preversion": "npm run build",
    "version": "git add manifest.json manifest-pub.json",
    "postversion": "git push && git push --tags",
    "build": "webpack --mode production --progress",
    "build:dev": "webpack --mode development --progress",
    "clean": "rm -rf dist",
    "release": "npm version patch -m \"Release v%s\"",
    "release:minor": "npm version minor -m \"Release v%s\"",
    "release:major": "npm version major -m \"Release v%s\""
  },
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "terser": "^5.31.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
